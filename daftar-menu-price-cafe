  <script>
    let pages = ["coffee", "snack", "noncoffee", "ricebowl", "mainfood", "alacarte"];
    let currentPage = 0;
    let cart = [];
    let totalPoints = 0;

    function changePage(dir) {
      document.getElementById(pages[currentPage]).classList.remove("active");
      currentPage = (currentPage + dir + pages.length) % pages.length;
      document.getElementById(pages[currentPage]).classList.add("active");
    }

    function selectItem(name, price) {
      cart.push({ name, price });
      alert(name + " ditambahkan ke pesanan.");
    }

    function checkout() {
      if (cart.length === 0) return alert("Belum ada pesanan.");
      let receipt = "<ul style='text-align:left'>";
      let total = 0;
      cart.forEach(item => {
        receipt += `<li>${item.name} - Rp${item.price.toLocaleString()}</li>`;
        total += item.price;
      });
      receipt += "</ul>";
      receipt += `<p><strong>Total: Rp${total.toLocaleString()}</strong></p>`;
      document.getElementById("receiptContent").innerHTML = receipt;
      document.getElementById("receipt").style.display = "block";
      const earned = Math.floor(total / 10000);
      totalPoints += earned;
      document.getElementById("userPoints").textContent = totalPoints;
      cart = [];
    }

    function showRewards() {
      document.getElementById("rewardSection").style.display = "block";
    }

    function redeem(item, cost) {
      if (totalPoints >= cost) {
        totalPoints -= cost;
        document.getElementById("userPoints").textContent = totalPoints;
        alert("Kamu telah menukar poin untuk: " + item);
      } else {
        alert("Poin kamu belum cukup!");
      }
    }
  </script>
